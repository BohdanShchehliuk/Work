<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/AIRPORT?serverTimezone=UTC
        </property>

        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="connection.pool_size">20</property>

        <property name="hbm2ddl.auto">none</property>
        <property name="show_sql">true</property>
        <!-- mapping files -->
        <mapping class="entity.Aircraft"/>
        <mapping class="entity.AircraftTypes"/>
        <mapping class="entity.Airline"/>
        <mapping class="entity.Flight"/>
        <mapping class="entity.Gate"/>
        <mapping class="entity.Passenger"/>
        <mapping class="entity.Personal"/>
        <mapping class="entity.PersonalInfo"/>
        <mapping class="entity.Routes"/>
        <mapping class="entity.Salary"/>
        <mapping class="entity.Terminal"/>
        <mapping class="entity.Ticket"/>

    </session-factory>
</hibernate-configuration>